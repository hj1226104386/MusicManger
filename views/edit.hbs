<!--编辑歌曲-->
<div class="edit-form col-md-6 col-md-offset-3">
    <form action='/updateSong' method='post'>
        <div class="form-group">
            <label>歌曲名称</label>
            <input type="text" class="form-control" name='song' value="{{data.song}}" placeholder="歌曲名称">
        </div>
        <div class="form-group">
            <label>歌手名称</label>
            <input type="text" class="form-control" name='singer' value="{{data.singer}}" placeholder="歌手名称">
        </div>
        <div class="form-group">
            <label>歌曲时长</label>
            <input type="text" class="form-control" name='duration' value="{{data.duration}}" placeholder="歌曲时长">
        </div>
        <div class="form-group">
            <label>歌曲链接</label>
            <input type="text" class="form-control" name='source' value="{{data.source}}" placeholder="歌曲链接">
        </div>
        <div class="edit-btns">
            <input type="hidden" class="form-control" name='id' value="{{data.id}}">
            <button type="submit" class="btn btn-primary">确定修改</button>
            <a type="button" class="btn btn-default" href='/'>返回</a>
        </div>
    </form>
</div>